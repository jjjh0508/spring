<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
   
   
 	<bean id="carpBread" class="com.greedy.section01.singleton.xmlconfig.Bread">
 		<constructor-arg index="0" value="크림빵"/>
 		<constructor-arg index="1" value="1000"/>
 		<constructor-arg index="2" value="300"/>
 	</bean>
 	
 	<bean id="milk" class="com.greedy.section01.singleton.xmlconfig.Beverage" >
 		<constructor-arg index="0" value="크림 우유"/>
 		<constructor-arg index="1" value="1000"/>
 		<constructor-arg index="2" value="300"/>
 	</bean>
 	
 	<bean id="water" class="com.greedy.section01.singleton.xmlconfig.Beverage" >
 		<constructor-arg index="0" value="담록수"/>
 		<constructor-arg index="1" value="1000000"/>
 		<constructor-arg index="2" value="300"/>
 	</bean>
 	
 	<bean id ="cart" class="com.greedy.section01.singleton.xmlconfig.Shoopingcard" scope="singleton">
 	<!-- <bean id ="cart" class="com.greedy.section01.singleton.xmlconfig.Shoopingcard" scope="prototype"> -->
 	
 	
 	</bean>
   
 </beans>
 
 
 